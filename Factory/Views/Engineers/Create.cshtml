@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer
<div id=Header>
  <h1 id = HeaderText>Dr. Sillystringz's Factory</h1>
  <h4> Add a new Engineer</h4>
</div>

@using (Html.BeginForm())
  {
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    <br>
    @Html.LabelFor(model => model.License)
    @Html.TextBoxFor(model => model.License)
    <br>

    <input type="submit" value="Add Engineer" class="btn btn-default" />
  }
  <p>@Html.ActionLink("See all Engineers", "Index")</p>