@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<div id=Header>
  <h1 id=HeaderText>Dr. Sillystringz's Factory</h1>
</div>

  <h2>Add a new Machine</h2>

  @using (Html.BeginForm())
  {
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    <br>
    @Html.LabelFor(model => model.SerialNumber)
    @Html.TextBoxFor(model => model.SerialNumber)
    <br>
    @Html.LabelFor(model => model.Description)
    @Html.TextBoxFor(model => model.Description)
    <br>
    @Html.LabelFor(model => model.Location)
    @Html.TextBoxFor(model => model.Location)
    <br>
    <input type="submit" value="Add new Machines" />
  }
  <p>@Html.ActionLink("Show all Machines", "Index")</p>
  <p>@Html.ActionLink("Home", "Index", "Home")</p>
  